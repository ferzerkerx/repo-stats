  "dependencies": {
    "@octokit/rest": "^16.13.2",
    "bottleneck": "^2.19.2",
    "elasticsearch": "^15.2.0",
    "express": "^4.17.1",
    "node-env-file": "^0.1.8",
    "node-fetch": "^2.6.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^23.3.3",
    "@types/node": "7.0.22",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "./**/*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
